generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  address  String
  password String
  orders   Order[]
}

model Order {
  id         String    @id @default(cuid())
  total      Float
  address    String
  customerId String? // âœ… make optional
  customer   Customer? @relation(fields: [customerId], references: [id])
}
